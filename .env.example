# Database Configuration
DB_HOST=localhost
DB_NAME=floor_monitor
DB_USER=postgres
DB_PASSWORD=your_database_password_here
DB_PORT=5432

# Kaggle API Credentials (for downloading training datasets)
# Get these from: https://www.kaggle.com/settings/account -> API -> Create New API Token
KAGGLE_USERNAME=your_kaggle_username
KAGGLE_KEY=your_kaggle_api_key

# Application Settings
APP_VERSION=1.0.0
APP_DEBUG=true

# Camera Settings
CAMERA_WIDTH=640
CAMERA_HEIGHT=480
CAMERA_FPS=30

# Alert Thresholds (in minutes)
WARNING_MINUTES=15
ALERT_MINUTES=30

# Notification Settings
NOTIFICATIONS_ENABLED=true
NOTIFICATIONS_SOUND=true

# Face Recognition Settings
FACE_RECOGNITION_MODEL=ArcFace
MIN_FACE_QUALITY=35.0
RECOGNITION_CONFIDENCE_THRESHOLD=0.70
STABILITY_CONFIRMATIONS_NEEDED=3

# Tracking Parameters
IOU_THRESHOLD=0.20
MAX_CENTROID_DISTANCE=150
MIN_CONFIDENCE_TO_LOCK=0.65
TRACK_MEMORY_DURATION=15.0
MAX_TRACK_AGE=2.0

# Security (Optional - for future use)
# JWT_SECRET_KEY=your_jwt_secret_key_here
# API_SECRET_KEY=your_api_secret_key_here
# ENCRYPTION_KEY=your_encryption_key_here
